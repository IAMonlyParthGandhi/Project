# Server Production Configuration
PORT=5000
NODE_ENV=production

# Database (Production MongoDB)
MONGODB_URI=mongodb://admin:password@mongodb:27017/todoapp?authSource=admin

# JWT Secrets (Use strong production secrets)
JWT_SECRET=production_jwt_secret_key_minimum_32_characters_long
JWT_REFRESH_SECRET=production_refresh_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Client Configuration
CLIENT_URL=http://localhost:3000

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
